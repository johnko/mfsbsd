#!/bin/sh

THISSCRIPT=`echo $0 | /usr/bin/awk '{print $1}'`
THISFILE=`echo ${THISSCRIPT##*/} | /usr/bin/sed 's,cron-,,' | /usr/bin/sed 's,-list,,'`

if /bin/pgrep -lf ${THISSCRIPT##*/} >/dev/null 2>&1 ; then
	exit 1
else
	if ! /usr/sbin/sysrc -f /etc/rc.conf nginx_enable | /usr/bin/egrep "YES" >/dev/null 2>&1 ; then
		if /bin/pgrep -lf '/usr/local/sbin/nginx' >/dev/null 2>&1 ; then
			exit
		else
			if [ -x "/usr/local/etc/rc.d/nginx" ]; then
				/usr/local/etc/rc.d/nginx onestart
			fi
		fi
	fi
fi
