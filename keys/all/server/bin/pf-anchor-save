#!/bin/sh
if [ "$( id -u )" != "0" ]; then
	echo "ERROR: Must be root!"
	exit 1
fi

if [ -z "$1" ]; then
	echo "Usage: ${0##*/} anchor"
	exit 1
fi


if /sbin/mount | /usr/bin/grep "/server/savepf" > /dev/null 2> /dev/null; then


	outfile=/server/savepf/$1.anchor
	echo >${outfile}
	/sbin/pfctl -P -a $1 -s nat \
		>>${outfile} \
		2>/dev/null
	/sbin/pfctl -P -a $1 -s rules \
		>>${outfile} \
		2>/dev/null


fi
